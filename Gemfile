source "https://rubygems.org"

# Use GitHub Pages compatible Jekyll version
gem "github-pages", group: :jekyll_plugins

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jekyll-feed"
end

# Development gems
group :development do
  gem "webrick", "~> 1.7" # Required for Ruby 3.0+
end